package JavaBase;

public class LoopsConcept {

	public static void main(String[] args) {

		//1. while loop:
		
		int i = 1; // initialization
		while(i<=10) { // conditional
			System.out.println("value of i is: " +i);
			i++; //incremental/decremental
		}
		
		//2. for loop:
		
		for(int j=1;j<=10;j++) {
			System.out.println("value of j"
					+ " is: " +j);
		}
		
		
	}

}
